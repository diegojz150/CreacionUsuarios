<% if @user && @user.errors.any? %>
	<div id="error_explanation">
		<h2>
			Existen <%=pluralize(@user.errors.count, "error", "errores")%> en el formulario.
		</h2>
		<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>	
	</div>
<% end %>


<%= form_for :user, url: users_path do |f| %>
	<fieldset>
		<%=f.label :name, "Nombre"%>
		<%=f.text_field :name %>
	</fieldset>
	<fieldset>
		<%=f.label :email, "Correo"%>
		<%=f.text_field :email %>
	</fieldset>
	<fieldset>
		<%=f.label :password, "Contraseña"%>
		<%=f.password_field :password %>
	</fieldset>
	<fieldset>
		<%=f.submit "Enviar"%>
	</fieldset>
	</fieldset>
		<p><%= link_to "Volver al menú", "/" %></p>
	</fieldset>
<% end %>